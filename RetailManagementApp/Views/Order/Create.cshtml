@model RetailManagementApp.Models.Order

@{
    ViewData["Title"] = "Place New Order";
}

<div class="min-h-screen bg-gray-50 flex items-center justify-center p-4 font-sans">
    <div class="max-w-xl w-full">

        <header class="text-center mb-10">
            <h1 class="text-3xl font-bold text-gray-900 tracking-tight">
                @ViewData["Title"]
            </h1>
            <p class="mt-2 text-md text-gray-500">
                Log a new retail transaction and upload the product image.
            </p>
        </header>

        <!-- Display Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="text-red-600 font-medium mb-4 p-3 bg-red-50 rounded-lg border border-red-300"></div>

        <!-- Cleaned-up Card Container -->
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="bg-white shadow-xl rounded-xl p-8 space-y-6 border border-gray-100">
            @Html.AntiForgeryToken()

            <!-- Input Fields Group -->
            <div class="space-y-5">

                <!-- Customer Name -->
                <div>
                    <label asp-for="CustomerName" class="block text-sm font-medium text-gray-700 mb-1">Customer Name</label>
                    <!-- Simplified input, no icon wrapper -->
                    <input asp-for="CustomerName" class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 placeholder-gray-400 transition duration-150" placeholder="Enter customer's full name" />
                    <span asp-validation-for="CustomerName" class="text-xs text-red-500 mt-1 block"></span>
                </div>

                <!-- Product Name -->
                <div>
                    <label asp-for="ProductName" class="block text-sm font-medium text-gray-700 mb-1">Product Name</label>
                    <!-- Simplified input, no icon wrapper -->
                    <input asp-for="ProductName" class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 placeholder-gray-400 transition duration-150" placeholder="e.g., Ultra 4K Monitor" />
                    <span asp-validation-for="ProductName" class="text-xs text-red-500 mt-1 block"></span>
                </div>

                <!-- Total Amount -->
                <div>
                    <label asp-for="TotalAmount" class="block text-sm font-medium text-gray-700 mb-1">Total Amount ($)</label>
                    <!-- Simplified input, no icon wrapper -->
                    <input asp-for="TotalAmount" type="number" step="0.01" min="0" class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 placeholder-gray-400 transition duration-150" placeholder="0.00" />
                    <span asp-validation-for="TotalAmount" class="text-xs text-red-500 mt-1 block"></span>
                </div>

                <!-- Product Photo Upload (IFormFile) - Using standard Tailwind file input styling -->
                <div>
                    <label for="photo" class="block text-sm font-medium text-gray-700 mb-1">Product Photo (Required)</label>
                    <input type="file" id="photo" name="photo" accept="image/*" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100 transition duration-150" />
                    <span class="text-xs text-red-500 mt-1 block">@Html.ValidationMessage("Photo")</span>
                </div>
            </div>

            <!-- Hidden Fields -->
            <input asp-for="PartitionKey" type="hidden" value="DEFAULT" />
            <input asp-for="RowKey" type="hidden" value="@Guid.NewGuid().ToString()" />

            <!-- Action Buttons -->
            <div class="flex justify-between items-center pt-6 border-t border-gray-100 mt-6">

                <!-- Cancel Button -->
                <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150">
                    <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
                    Back to List
                </a>

                <!-- Submit Button -->
                <button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent text-sm font-bold rounded-lg text-white bg-indigo-600 shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150">
                    <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Place Order
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}