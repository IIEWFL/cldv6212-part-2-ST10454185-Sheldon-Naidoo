@model IEnumerable<RetailManagementApp.Models.Order>

@{
    ViewData["Title"] = "Order Management Dashboard";
}

<h1 class="text-3xl font-bold mb-6 text-gray-800">Order Management Dashboard</h1>

<!-- Status Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
        <p class="font-bold">Success!</p>
        <p>@TempData["SuccessMessage"]</p>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
        <p class="font-bold">Error!</p>
        <p>@TempData["ErrorMessage"]</p>
    </div>
}

<div class="flex justify-between items-center mb-6">
    <!-- Create New Order Button -->
    <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition duration-300">
        Create New Order
    </a>

    <!-- Log/Export Buttons -->
    <div class="flex space-x-3">
        <a asp-action="Log" class="bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition duration-300">
            View Transaction Logs
        </a>
        <form asp-action="ExportLog" method="post" class="inline-block">
            @Html.AntiForgeryToken()
            <button type="submit" class="bg-gray-700 hover:bg-gray-800 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition duration-300">
                Export Log to File Share
            </button>
        </form>
    </div>
</div>

<div class="shadow-lg overflow-hidden border-b border-gray-200 sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Customer
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Product
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Amount
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Image
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    PK/RK (Keys)
                </th>
                <th scope="col" class="relative px-6 py-3">
                    <span class="sr-only">Actions</span>
                </th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            $@Html.DisplayFor(modelItem => item.TotalAmount)
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            @if (!string.IsNullOrEmpty(item.ProductPhotoUrl))
                            {
                                <a href="@item.ProductPhotoUrl" target="_blank" class="text-blue-600 hover:text-blue-900">View Photo</a>
                            }
                            else
                            {
                                <span>No Photo</span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <span class="font-mono text-xs">@item.PartitionKey / @item.RowKey</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                            <a asp-action="Edit" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                            <a asp-action="Details" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey" class="text-green-600 hover:text-green-900">Details</a>
                            <a asp-action="Delete" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey" class="text-red-600 hover:text-red-900">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                        No orders found in the system. Start by creating a new order!
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

